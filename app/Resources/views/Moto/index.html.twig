{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Motos</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcadre</th>
                <th>Nummoteur</th>
                <th>Marque</th>
                <th>Cylindre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for moto in motos %}
            <tr>
                <td><a href="{{ path('moto_show', { 'id': moto.id }) }}">{{ moto.id }}</a></td>
                <td>{{ moto.numCadre }}</td>
                <td>{{ moto.numMoteur }}</td>
                <td>{{ moto.marque }}</td>
                <td>{{ moto.cylindre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('moto_show', { 'id': moto.id }) }}">Montrer</a>
                        </li>
                        <li>
                            <a href="{{ path('moto_edit', { 'id': moto.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('moto_new') }}">Ajouter une Moto</a>
        </li>
    </ul>
{% endblock %}
