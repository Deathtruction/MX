{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "base.html.twig" %}

{% block connexion %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}

    <div class="row">
        <div class="col-lg-8">
            <img src="{{ asset('images/moto.jpg') }}" alt="Holeshot">
        </div>
        <div class="col-md-4">
            <div class="connexion" style="background-color: white">
                <h2 style="text-align: center" class="titreG">Connexion</h2>
                <form action="{{ path('login_check') }}" method="post">
                    <label for="username">Pseudo :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password"/>
                    <br/>
                    <input type="submit" value="Connexion"/>
                </form>
            </div>
        </div>
    </div>

{% endblock %}